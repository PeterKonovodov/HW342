<resources>
    <!-- Base application theme. -->
    <style name="BlackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:colorBackground">@color/colorBackgroundBlack</item>

    </style>
    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorTextGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
    </style>

    <style name="MarginLargeTheme" parent = "BlackTheme">
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="MarginMiddleTheme" parent = "BlackTheme">
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="MarginSmallTheme" parent = "BlackTheme">
        <item name="android:layout_margin">10dp</item>
    </style>


</resources>